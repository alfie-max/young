    <h5 class="card-title"><%= @post.title %></h5>
    <p class="card-text"><%= @post.body %></p>
    <p class="card-text"><small class="text-muted">by <%= @post.user.name %></small></p>
    <p class="card-text"><small class="text-muted"><%= @post.category.name %></small></p>
    <p class="card-text"><small class="text-muted">Created <%= time_ago_in_words(@post.created_at) %> ago</small></p>
  </div>
</div>

