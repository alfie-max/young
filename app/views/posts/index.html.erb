<%= render "shared/navbar" %>

<h1>Posts</h1>

<div class="card-group" style="display: block;">
  <% @posts.each do |post| %>
    <div class="card">
      <%= link_to image_tag(post.image.url, alt: 'Image', style: 'width: 40%'), post if post.image? %>
      <!--<img src="..." class="card-img-top" alt="...">-->
      <div class="card-body">
        <h5 class="card-title"><%= link_to post.title, post %><%#= post.title %></h5>
        <p class="card-text"><%= post.body %></p>
        <p class="card-text"><small class="text-muted">By <%= post.user.name %></small></p>
      </div>
    </div>
  <% end %>
</div>

